<%- include header %>
<body background="imgs/login.jpg">
<div class="clearfix page-nav">
   <div class="pull-right nav-register"><a href="/register">注册</a></div>
   <div class="pull-right nav-login"><a href="/login">登录</a></div>
</div>
   <div class="text-center page-title">新用户登录</div><br>
<div class="container">
   <div class="row">
      <div class="col-xs-4 col-xs-offset-4">
         <% if(loginInfo!=""){%>
         <div class="alert alert-danger" role="alert"><%= loginInfo %></div>
         <% } %>
         <form method="post">
            <div class="form-group">
               <input type="text" class="form-control" name="username" placeholder="用户名">
            </div>
            <div class="form-group">
               <input type="password" class="form-control" name="password" placeholder="密码">
            </div>
            <button type="submit" class="btn  btn-info btn-lg btn-block">登录</button>
         </form>
      </div>
   </div>
</div>
<%- include footer%>